<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ekstep</groupId>
        <artifactId>samza</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>distribution</artifactId>
    <packaging>pom</packaging>
    <name>Distribution</name>
    <dependencies>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>audit-history-indexer</artifactId>
			<version>0.0.81</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>audit-event-generator</artifactId>
			<version>0.0.54</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>composite-search-indexer</artifactId>
			<version>0.0.113</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>qrcode-image-generator</artifactId>
			<version>0.0.26</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>asset-enrichment</artifactId>
			<version>0.0.100</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
			<exclusions>
				<exclusion>
					<groupId>com.google.guava</groupId>
					<artifactId>guava-jdk5</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>publish-pipeline</artifactId>
			<version>0.0.332</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>collection-migration</artifactId>
			<version>0.0.21</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>course-batch-updater</artifactId>
			<version>0.0.33</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>post-publish-processor</artifactId>
			<version>0.0.28</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>merge-user-courses</artifactId>
			<version>0.0.12</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>course-certificate-generator</artifactId>
			<version>0.0.43</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
		<dependency>
			<groupId>org.ekstep</groupId>
			<artifactId>auto-creator</artifactId>
			<version>0.0.3</version>
			<type>tar.gz</type>
			<classifier>distribution</classifier>
		</dependency>
	</dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>distro-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/src.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
